<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4D4B58</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/primary_text_color</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/primary_text_color</item>
        <item name="colorControlNormal">@color/primary_text_color</item>
        <item name="colorControlActivated">@color/active_icon_color</item>
    </style>

    <style name="LoginAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">

        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/secondary_text_color</item>

    </style>

</resources>
