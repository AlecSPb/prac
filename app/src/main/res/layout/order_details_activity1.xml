<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_box"
        android:background="@drawable/activity_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:id="@+id/heading_order_details"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفاصيل الطلب"
            android:layout_alignParentRight="true"
            android:padding="10dp"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_box"
        android:id="@+id/product_list"
        android:layout_above="@+id/seperator"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_box"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/customer_not_available_button"
            android:orientation="horizontal"
            android:background="@drawable/customer_not_available_back"
            android:layout_marginRight="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer \nNot Available"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="10dp"
                android:layout_weight="1"
                android:textColor="#e93847"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="العميل غير متوفر"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:textColor="#e93847"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/package_return_button"
            android:orientation="horizontal"
            android:background="@drawable/package_return_back"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pacakge
Return"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="10dp"
                android:layout_weight="1"
                android:textColor="#f984d9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عودة الحزمة"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:textColor="#f984d9"
                />
        </LinearLayout>


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_above="@+id/button_box"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:id="@+id/deliver_package_button"
    android:orientation="horizontal"
    android:background="@drawable/deliver_button_back">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Deliver Package"
    android:textColor="@color/nav_text_color"
    android:layout_gravity="center_vertical"
    android:layout_weight="4"
    android:paddingLeft="20dp"
    android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تسليم الحزمة"
        android:textColor="@color/nav_text_color"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        android:paddingRight="20dp"
        android:textStyle="bold"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/deliver_package_button"
        android:id="@+id/total_amount_box"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_amount_text"
            android:text="Total Amount"
            android:gravity="right"
            android:layout_toLeftOf="@+id/total_amount"
            android:layout_weight="3"
            android:layout_marginRight="20dp"
            android:textColor="@color/secondary_text_color"
            android:textSize="14dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:id="@+id/total_amount"
            android:layout_weight="1"
            android:background="@drawable/total_amount_button_background"
            android:text="SAR 8942.000"
            android:textColor="@color/nav_text_color"
            />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.1dp"
    android:layout_above="@+id/total_amount_box"
    android:id="@+id/seperator"
    android:background="@color/primary_text_color"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp">

</View>
</RelativeLayout>