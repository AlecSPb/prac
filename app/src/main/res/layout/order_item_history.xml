        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:background="@color/primary_text_color"-->
        <!--android:layout_below="@id/product_image_box"-->
        <!--android:layout_marginTop="20dp">-->

    <!--</View>-->

</RelativeLayout>



